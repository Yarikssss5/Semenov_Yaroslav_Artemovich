<Window
    x:Name="MainWindowAccess"
    x:Class="ddb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ddb"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600" Padding="0" Loaded="MainWindow_Loaded">
    <Grid Width="600" Height="600" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="157*"/>
            <ColumnDefinition Width="26*"/>
        </Grid.ColumnDefinitions>
        <DataGrid 
            x:Name="UserViewAccess"
            AutoGenerateColumns="False"
            Margin="0,10,0,440"
            Width="600"
            Height="150"
            IsReadOnly="True"
            Grid.ColumnSpan="3"
            MouseDoubleClick="UserViewAccess_DoubleClick"/>
    </Grid>
</Window>
